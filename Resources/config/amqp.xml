<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services
        http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="webit_message_bus.amqp.connection_pools" alias="webit_message_bus.amqp.registry.container_aware" />
        <service id="webit_message_bus.amqp.connections" alias="webit_message_bus.amqp.registry.container_aware" />
        <service id="webit_message_bus.amqp.listeners" alias="webit_message_bus.amqp.registry.container_aware" />
        <service id="webit_message_bus.amqp.publishers" alias="webit_message_bus.amqp.registry.container_aware" />

        <service id="webit_message_bus.amqp.registry.container_aware" class="Webit\MessageBusBundle\Amqp\AmqpRegistry">
            <argument type="collection" />
            <argument type="collection" />
            <argument type="collection" />
            <call method="setContainer">
                <argument type="service" id="service_container" />
            </call>
        </service>

        <service id="webit_message_bus.amqp.start_listener_command" class="Webit\MessageBus\Infrastructure\Amqp\Listener\Command\StartListenerCommand">
            <argument type="service" id="webit_message_bus.amqp.listeners" />
            <call method="setName">
                <argument type="string">webit_message_bus:amqp:start_listener</argument>
            </call>
            <tag name="console.command" />
        </service>
    </services>
</container>
