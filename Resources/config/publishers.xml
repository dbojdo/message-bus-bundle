<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services
        http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="webit_message_bus.publisher_registry" alias="webit_message_bus.publisher_registry.container_aware" />
        <service id="webit_message_bus.publisher_registry.container_aware" class="Webit\MessageBusBundle\Publisher\ContainerAwarePublisherRegistry">
            <argument type="collection" />
            <call method="setContainer">
                <argument type="service" id="service_container" />
            </call>
        </service>
    </services>
</container>